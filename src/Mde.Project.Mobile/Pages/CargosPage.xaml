<?xml version="1.0" encoding="utf-8" ?>

<ContentPage
    x:Class="Mde.Project.Mobile.Pages.CargosPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <Shell.TitleView>
        <Label
            Text="Your Cargos"
            TextColor="#4F3F9B"
            VerticalTextAlignment="Center"
            VerticalOptions="Center"
            HorizontalOptions="Start"
            Padding="100,0,0,0"
            HeightRequest="50"
            FontSize="20"
            FontFamily="PlayBold" />
    </Shell.TitleView>
    
  
    <ContentPage.Content>
        <ScrollView>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Grid BackgroundColor="OrangeRed" Opacity=".9" />
                    <Grid Padding="50">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Image Grid.Column="0"
                               Aspect="AspectFit"
                               Source="cargos.png"
                               HorizontalOptions="Center"
                               VerticalOptions="Center" />
                    </Grid>
                    <Border Grid.Row="1"
                            StyleClass="baseBorder"
                            Margin="0,-40,0,12"> 
                        <ScrollView
                            VerticalOptions="Start" 
                            HeightRequest="500" 
                            HorizontalScrollBarVisibility="Never" 
                            VerticalScrollBarVisibility="Always"> 
                            <VerticalStackLayout Padding="20" Spacing="10">
                                <Button Text="Cargo 1" StyleClass="baseButton" x:Name="Button1" Clicked="Button1_OnClicked" />
                                <Button Text="Cargo 2" StyleClass="baseButton" x:Name="Button2" Clicked="Button1_OnClicked"/>
                                <Button Text="Cargo 3" StyleClass="baseButton" x:Name="Button3" Clicked="Button1_OnClicked"/>
                                <Button Text="Cargo 4" StyleClass="baseButton" x:Name="Button4" Clicked="Button1_OnClicked"/>
                                <Button Text="Cargo 5" StyleClass="baseButton" x:Name="Button5" Clicked="Button1_OnClicked"/>
                                <ImageButton Source="plus.png" x:Name="Add_Cargo" Clicked="Add_Cargo_OnClicked" />
                            </VerticalStackLayout>
                        </ScrollView>

                    </Border>
                </Grid>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>