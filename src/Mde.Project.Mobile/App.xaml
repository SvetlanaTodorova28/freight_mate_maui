<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Mde.Project.Mobile.App">
    <Application.Resources>
        <ResourceDictionary>
            <Shadow x:Key="basicShadow" Brush="#4F3F9B" Offset="5,5" Opacity="0.6" />
            <Style Class="FlyoutItemLabelStyle" TargetType="Label" >
                <Setter Property="TextColor" Value="Orange" />
                <Setter Property="FontSize" Value="20"></Setter>
                <Setter Property="FontFamily" Value="PlayBold"></Setter>
            </Style>
<Style TargetType="TabBar">
    <Setter Property="Shell.TabBarBackgroundColor"
            Value="CornflowerBlue" />
    <Setter Property="Shell.TabBarTitleColor"
            Value="Black" />
    <Setter Property="Shell.TabBarUnselectedColor"
            Value="Green" />
</Style>


         
            <Style Class="LoginCreate" TargetType="Frame">
                <Setter Property="Shadow" Value="{StaticResource basicShadow}" />
                <Setter Property="Margin" Value="0,10,0,5"></Setter>
            </Style>
            <Style Class="LoginCreate" TargetType="Entry">
                <Setter Property="Shadow" Value="{StaticResource basicShadow}" />
                <Setter Property="Margin" Value="0,10,0,5"></Setter>
            </Style>
            <Style Class="LoginCreate" TargetType="Button">
                <Setter Property="Shadow" Value="{StaticResource basicShadow}" />
                <Setter Property="Margin" Value="0,5,0,5"></Setter>
                <Setter Property="BackgroundColor" Value="#4F3F9B"></Setter>
                <Setter Property="CornerRadius" Value="9"></Setter>
                <Setter Property="TextColor" Value="White"></Setter>
                <Setter Property="FontFamily" Value="PlayBold"></Setter>
                <Setter Property="FontSize" Value="20"></Setter>
                
            </Style>
        </ResourceDictionary>
        </Application.Resources>
</Application>
