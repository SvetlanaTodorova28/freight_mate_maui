<?xml version="1.0" encoding="utf-8" ?>

<ContentPage
    x:Class="Mde.Project.Mobile.Pages.CargosPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewmodels="clr-namespace:Mde.Project.Mobile.ViewModels"
    x:DataType="viewmodels:HomeViewModel"
    BackgroundColor="#1D3448" Opacity="1.4">
    
    
    <ScrollView>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                   
                    <Grid Padding="4">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" /> 
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        
                        <Image
                            Grid.Column="1"
                            Source="pff1.png" 
                            Aspect="AspectFit"
                            HeightRequest="150"
                        /> 
                    </Grid>
                    <Border Grid.Row="1" Margin= "0,25,0,12"
                            StyleClass="baseBorder">
                        <Grid> 
                        <ScrollView
                            VerticalOptions="Start" 
                            HeightRequest="500" 
                            HorizontalScrollBarVisibility="Never" 
                            VerticalScrollBarVisibility="Never"
                            > 
                            <VerticalStackLayout Padding="20" Spacing="10" IsVisible="{Binding ShowWelcomeSection}">
                                <Button Text="Cargo 1" StyleClass="baseButton" x:Name="Button1" Clicked="Button1_OnClicked" />
                                <Button Text="Cargo 2" StyleClass="baseButton" x:Name="Button2" Clicked="Button1_OnClicked"/>
                                <Button Text="Cargo 3" StyleClass="baseButton" x:Name="Button3" Clicked="Button1_OnClicked"/>
                                <Button Text="Cargo 4" StyleClass="baseButton" x:Name="Button4" Clicked="Button1_OnClicked"/>
                                <Button Text="Cargo 5" StyleClass="baseButton" x:Name="Button5" Clicked="Button1_OnClicked"/>
                                <ImageButton Source="plus.png" x:Name="Add_Cargo" Clicked="Add_Cargo_OnClicked" />
                            </VerticalStackLayout>
                        </ScrollView>
                            <VerticalStackLayout IsVisible="{Binding ShowLoginSection}">
                                <Label>Welcome</Label>
                            </VerticalStackLayout>
</Grid>
                    </Border>
                </Grid>
        </ScrollView>
    
</ContentPage>