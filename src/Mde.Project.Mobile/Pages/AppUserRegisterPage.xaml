<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Mde.Project.Mobile.Pages.AppUserRegisterPage"
             xmlns:viewmodels="clr-namespace:Mde.Project.Mobile.ViewModels"
             x:DataType="viewmodels:AppUserRegisterViewModel"
             Style="{StaticResource CustomPageStyle}"
             NavigationPage.HasNavigationBar="False">

    <ScrollView>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            
            <Grid Padding="50">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
            </Grid>

            <Border Grid.Row="1" StyleClass="baseBorder">
                <ScrollView>
                    <Grid Padding="30" VerticalOptions="Center">
                        <VerticalStackLayout Padding="20" Spacing="10">
                            <Label Text="Registration"
                                   FontSize="Large"
                                   HorizontalOptions="Center"
                                   TextColor="Beige"
                                   FontFamily="PlayBold"
                                   Margin="40" />

                            <Grid>
                                <Entry
                                    BackgroundColor="Transparent"
                                    Margin="0, 0,0,30"
                                    FontFamily="PlayBold"
                                    Placeholder="FIRST NAME"
                                    PlaceholderColor="WhiteSmoke"
                                    TextColor="White"
                                    Text="{Binding FirstName}" />
                                
                                <BoxView HeightRequest="1"
                                         BackgroundColor="White" HorizontalOptions="Fill" />
                            </Grid>


                            <Grid>
                                <Entry
                                    BackgroundColor="Transparent"
                                    Margin="0, 0,0,30"
                                    FontFamily="PlayBold"
                                    Placeholder="LAST NAME"
                                    PlaceholderColor="WhiteSmoke"
                                    TextColor="White"
                                    Text="{Binding FirstName}" />
                                
                                <BoxView HeightRequest="1"
                                         BackgroundColor="White" HorizontalOptions="Fill" />
                            </Grid>
                            
                            <Grid>
                                <Entry
                                    BackgroundColor="Transparent"
                                    Margin="0, 0,0,30"
                                    FontFamily="PlayBold"
                                    Placeholder="EMAIl"
                                    PlaceholderColor="WhiteSmoke"
                                    TextColor="White"
                                    Keyboard="Email"
                                    Text="{Binding Username}" />
                                
                                <BoxView HeightRequest="1"
                                         BackgroundColor="White" HorizontalOptions="Fill" />
                            </Grid>
                            <Grid>
                                <Entry
                                    BackgroundColor="Transparent"
                                    Margin="0, 0,0,30"
                                    FontFamily="PlayBold"
                                    IsPassword="True"
                                    Placeholder="PASSWORD"
                                    PlaceholderColor="WhiteSmoke"
                                    TextColor="White"
                                    Keyboard="Email"
                                    Text="{Binding Username}" />
                                
                                <BoxView HeightRequest="1"
                                         BackgroundColor="White" HorizontalOptions="Fill" />
                            </Grid>
                            
                            <Grid>
                                <Entry
                                    BackgroundColor="Transparent"
                                    Margin="0, 0,0,30"
                                    FontFamily="PlayBold"
                                    IsPassword="True"
                                    Placeholder="CONFIRM PASSWORD"
                                    PlaceholderColor="WhiteSmoke"
                                    TextColor="White"
                                    Keyboard="Email"
                                    Text="{Binding Username}" />
                                
                                <BoxView HeightRequest="1"
                                         BackgroundColor="White" HorizontalOptions="Fill" />
                            </Grid>
                            
                            <Label Text="Chose your function" FontFamily="PlayBold"
                                   TextColor="White">
                            </Label>
                            <Picker FontFamily="PlayBold" FontSize="18" ItemsSource="{Binding Functions}"
                                    SelectedItem="{Binding SelectedFunction}">
                            </Picker>

                            <Button
                                StyleClass="baseButton"
                                Text="Create your Account"
                                x:Name="createAccount"
                                Clicked="CreateAccount_OnClicked" />

                            <Label FontFamily="PlayBold"
                                   Text="Back to Welcome"
                                   TextColor="White"
                                   HorizontalOptions="Center">
                                <Label.GestureRecognizers>
                                    <TapGestureRecognizer
                                        x:Name="backToLogin"
                                        Tapped="BackToLogin_OnTapped"
                                        NumberOfTapsRequired="1" />
                                </Label.GestureRecognizers>
                            </Label>
                        </VerticalStackLayout>
                    </Grid>
                </ScrollView>
            </Border>

        </Grid>
    </ScrollView>
</ContentPage>