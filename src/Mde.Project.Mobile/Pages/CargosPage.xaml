<?xml version="1.0" encoding="utf-8" ?>

<ContentPage
    x:Class="Mde.Project.Mobile.Pages.CargosPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <Shell.TitleView>
        <Label
            Text="Your Cargos"
            TextColor="#4F3F9B"
            VerticalTextAlignment="Center"
            VerticalOptions="Center"
            HorizontalOptions="Start"
            Padding="100,0,0,0"
            HeightRequest="50"
            FontSize="20"
            FontFamily="PlayBold" />
    </Shell.TitleView>
    
  
    <ContentPage.Content>
        <ScrollView>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Grid BackgroundColor="OrangeRed" Opacity=".9" />
                    <Grid Padding="40">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Image Grid.Column="0"
                               Aspect="AspectFit"
                               Source="cargos.png"
                               HorizontalOptions="Center"
                               VerticalOptions="Center" />
                    </Grid>
                    <Border Grid.Row="1"
                            StrokeThickness="1"
                            Padding="20"
                            BackgroundColor="White"
                            Margin="0,-60,0,12"
                    > <Border.Shadow>
                            <Shadow
                                Brush="#4F3F9B" Offset="5,5" Opacity="0.9"  />
                        </Border.Shadow>
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="43,43,43,43" />
                        </Border.StrokeShape>
                        <VerticalStackLayout Padding="20" Spacing="10">
                            <Button Text="Cargo 1" BackgroundColor="#4F3F9B" TextColor="White" HeightRequest="50"
                                    FontFamily="PlayBold" x:Name="Button1" Clicked="Button1_OnClicked" />
                            <Button Text="Cargo 2" BackgroundColor="#4F3F9B" TextColor="White" HeightRequest="50"
                                    FontFamily="PlayBold" />
                            <Button Text="Cargo 3" BackgroundColor="#4F3F9B" TextColor="White" HeightRequest="50"
                                    FontFamily="PlayBold" />
                            <Button Text="Cargo 4" BackgroundColor="#4F3F9B" TextColor="White" HeightRequest="50"
                                    FontFamily="PlayBold" />
                            <Button Text="Cargo 5" BackgroundColor="#4F3F9B" TextColor="White" HeightRequest="50"
                                    FontFamily="PlayBold" />
                            <ImageButton Source="plus.png" x:Name="Add_Cargo" Clicked="Add_Cargo_OnClicked" />
                        </VerticalStackLayout>
                    </Border>
                </Grid>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>