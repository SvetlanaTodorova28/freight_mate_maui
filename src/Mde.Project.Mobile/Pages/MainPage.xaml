<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Mde.Project.Mobile.Pages.MainPage"
             Style="{StaticResource CustomPageStyle}"
             NavigationPage.HasNavigationBar="False">
    <Grid VerticalOptions="FillAndExpand"
          HorizontalOptions="FillAndExpand">
        
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>  
            <RowDefinition Height="Auto"/>  
            <RowDefinition Height="Auto"/>  
        </Grid.RowDefinitions>

        
        <Border Grid.Row="1"
                StyleClass="cargosBorder">
            <Button x:Name="login"
                    Text="Already have an account"
                    FontSize="22"
                    Clicked="Login_OnClicked"
                    FontFamily="PlayBold"
                    TextColor="White"/>
        </Border>

        
        <Border Grid.Row="2"
                StyleClass="cargosBorder">
            <Button x:Name="crtAccount"
                    Text="Create a Freight Mate Account"
                    FontSize="22"
                    FontFamily="PlayBold"
                    Clicked="CrtAccount_OnClicked"
                    TextColor="White"/>
        </Border>

    </Grid>

</ContentPage>