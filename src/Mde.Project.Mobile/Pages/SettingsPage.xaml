<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Mde.Project.Mobile.Pages.SettingsPage"
             xmlns:global="clr-namespace:"
             xmlns:sys="clr-namespace:System;assembly=System.Runtime"
             x:DataType="global:SettingsViewModel"
             Style="{StaticResource CustomPageStyle}">
    <Grid Padding="10">
       
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />  
            <ColumnDefinition Width="*" />  
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />  
            <RowDefinition Height="*" />  
        </Grid.RowDefinitions>

        
        <Label Grid.Row="0" Grid.Column="0"
               StyleClass="BaseLabel"
               Text="Let it snow !!!"
               Margin="10"
               HorizontalOptions="Center"
               IsVisible="{Binding Source={x:Static sys:DateTime.Now}, Converter={StaticResource DateRangeToVisibilityConverter}}" />
        
        <Switch Grid.Row="0" Grid.Column="1"
                Margin="10"
                IsToggled="{Binding SnowEnabled}"
                IsVisible="{Binding Source={x:Static sys:DateTime.Now}, Converter={StaticResource DateRangeToVisibilityConverter}}" />
    </Grid>
</ContentPage>