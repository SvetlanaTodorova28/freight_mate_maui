<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Mde.Project.Mobile.Pages.HomePage"
             BackgroundColor="#1D3448" Opacity="1.4">

    
           <ScrollView>
               <Grid>
                   <Grid.RowDefinitions>
                       <RowDefinition Height="Auto" />
                       <RowDefinition Height="*" />
                   </Grid.RowDefinitions>
                   
                   <Grid  Padding="50">
                       <Grid.ColumnDefinitions>
                           <ColumnDefinition Width="*"/>
                           <ColumnDefinition Width="*"/>
                       </Grid.ColumnDefinitions>

                       <Image
                           Grid.Column="0"
                           Aspect="AspectFit"
                           Source="truck_white.png" />
                       <Image
                           Grid.Column="1"
                           Aspect="AspectFit"
                           Source="name_white.png" />
                   </Grid>

                   <Border Grid.Row="1"
                           StyleClass="baseBorder"
                           Margin="0,5,0,12">
                      <Grid>
                <VerticalStackLayout Padding="20" Spacing="10">
                        <Label
                            FontAttributes="Bold"
                            FontFamily="PlayBold"
                            FontSize="Large"
                            HorizontalOptions="Center"
                            Text="Welcome!"
                            TextColor="White" />
                        <Label
                            FontFamily="PlayBold"
                            HorizontalOptions="Center"
                            Text="Log in to continue"
                            TextColor="#A3A3A4" 
                            />
                        <Grid Margin="0,30,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width=".2*" />
                                <ColumnDefinition Width=".8*" />
                            </Grid.ColumnDefinitions>
                           
                            <Border StyleClass="LoginCreateIcons">
                                <Image HorizontalOptions="Center" VerticalOptions="Center" Margin="4">
                                    <Image.Source>
                                        <FontImageSource
                                            FontFamily="AwesomeSolid"
                                            Glyph="&#xf0e0;"
                                            Color="#4F3F9B" />
                                    </Image.Source>
                                </Image>
                            </Border>
                               
                            <Entry
                                StyleClass="LoginCreateEntry"
                                Grid.Column="1"
                                Placeholder="EMAIL"
                                Text="driver@transport.com" />
                        </Grid>
                        <Grid Margin="0,25,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width=".2*" />
                                <ColumnDefinition Width=".8*" />
                            </Grid.ColumnDefinitions>
                            
                            <Border 
                                   StyleClass="LoginCreateIcons">
                                <Image HorizontalOptions="Center" Margin="4">
                                    <Image.Source>
                                        <FontImageSource
                                            FontFamily="AwesomeSolid"
                                            Glyph="&#xf084;"
                                            Color="#4F3F9B" 
                                            />
                                    </Image.Source>
                                </Image>
                                
                            </Border>
                            
                            <Entry
                                StyleClass="LoginCreateEntry"
                                Grid.Column="1"
                                IsPassword="True"
                                Placeholder="PASSWORD"
                                Text="12345" />
                        </Grid>
                        
                        <Button
                            x:Name="Login"
                            StyleClass="baseButton"
                            Clicked="Login_OnClicked"
                            Text="Login"/>
                        <Label
                            Margin="0,20,0,-10"
                            HorizontalOptions="Center"
                            FontFamily="PlayBold"
                            Text="Forgot your password?" />
                        <Button
                            x:Name="CreateAccount"
                            Margin="0,30,0,0"
                            BackgroundColor="#FBF6FD"
                            Clicked= "CreateAccount_OnClicked"                            
                            HeightRequest="60"
                            Text="Create your Account"
                            FontFamily="PlayBold"
                            TextColor="#4F3F9B" />
                    </VerticalStackLayout>
               </Grid>
            </Border>
        </Grid>
               </ScrollView>
   
</ContentPage>
