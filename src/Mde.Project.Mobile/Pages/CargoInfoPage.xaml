<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Mde.Project.Mobile.Pages.CargoInfoPage"
             Title="Info over your cargo">
    <ContentPage.Content>
        <Border Margin="0"
                Stroke="#2B0B98"
                HeightRequest="50"
                StrokeThickness="2"
                HorizontalOptions="Fill">
            <!-- setting the StrokeShape using the Element property notation -->
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="60"></RoundRectangle>
            </Border.StrokeShape>
            <!-- setting the Shadow using the Element property notation -->
            <Border.Shadow>
                <Shadow Offset="35,5" Radius="39" Opacity="0.35" Brush="#4F3F9B"></Shadow>
            </Border.Shadow>
            </Border>
    </ContentPage.Content>
</ContentPage>